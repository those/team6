<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobshep.shepherdlogin" >


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Preferences"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.mobshep.shepherdlogin.Preferences" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoggedIn"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.mobshep.shepherdlogin.LoggedIn" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider
            android:name=".SessionProvider"
            android:authorities="com.mobshep.shepherdlogin.SessionProvider"
            android:exported="true"
            android:multiprocess="true" >
        </provider>

    </application>

</manifest>
