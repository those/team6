<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobshep.PoorAuthentication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    
    <permission
        android:name="com.mobshep.PA.START_ACTIVITY"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ic_launcher"
        android:protectionLevel="dangerous" >
    </permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mobshep.PoorAuthentication.PoorAuthentication"
            android:label="@string/app_name"
            android:persistent="true"
            android:permission="com.mobshep.PA.START_ACTIVITY"
            android:theme="@style/ShepherdTheme" >
            <intent-filter>
                <action android:name="com.mobshep.PA.PoorAuthentication" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobshep.PoorAuthentication.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobshep.PoorAuthentication.Forgotton"
            android:label="@string/app_name"
            android:permission="com.mobshep.PA.START_ACTIVITY"
            android:persistent="true"
            android:theme="@style/ShepherdTheme" >
            <intent-filter>
                <action android:name="com.mobshep.PoorAuthentication.Forgotton" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.mobshep.PoorAuthentication.Main"
            android:label="@string/app_name"
            android:permission="com.mobshep.PA.START_ACTIVITY"
            android:persistent="true"
            android:theme="@style/ShepherdTheme" >
            <intent-filter>
                <action android:name="com.mobshep.PoorAuthentication.Main" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>